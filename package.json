{
  "name": "lazypr",
  "version": "1.0.2",
  "description": "AI-powered CLI tool that automatically generates pull request titles and descriptions from your git commits",
  "keywords": ["cli", "git", "pull-request", "ai", "automation", "groq", "developer-tools"],
  "author": "Raul Carini",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/r4ultv/lazypr.git"
  },
  "homepage": "https://lazypr.vercel.app",
  "bugs": {
    "url": "https://github.com/r4ultv/lazypr/issues"
  },
  "module": "index.ts",
  "type": "module",
  "bin": {
    "lazypr": "./dist/index.js",
    "lzp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node --format esm --minify --external clipboardy",
    "build:standalone": "bun build index.ts --compile --outfile lazypr",
    "dev": "bun run index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@ai-sdk/groq": "^2.0.22",
    "@clack/prompts": "^0.11.0",
    "@inquirer/select": "^4.3.4",
    "ai": "^5.0.54",
    "chalk": "^5.6.2",
    "clipboardy": "5.0.0",
    "commander": "^14.0.1",
    "zod": "^4.1.11"
  }
}
