{
  "name": "lazypr",
  "version": "1.4.2",
  "description": "Generate clean, consistent PRs from commits - powered by your favorite AI and your git history.",
  "keywords": [
    "cli",
    "git",
    "pull-request",
    "ai",
    "groq",
    "cerebras",
    "openai"
  ],
  "author": "Raul Carini <contact@raulcarini.dev> (https://raulcarini.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/r4ultv/lazypr.git"
  },
  "homepage": "https://lazypr.vercel.app",
  "bugs": {
    "url": "https://github.com/r4ultv/lazypr/issues"
  },
  "module": "index.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "lazypr": "./dist/index.js",
    "lzp": "./dist/lzp.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node --format esm --minify --external clipboardy",
    "postbuild": "echo '#!/usr/bin/env node\nimport(\"./index.js\");' > dist/lzp.js",
    "dev": "bun run index.ts",
    "start": "node dist/index.js",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@ai-sdk/cerebras": "^2.0.27",
    "@ai-sdk/groq": "^3.0.19",
    "@ai-sdk/openai": "^3.0.23",
    "@clack/prompts": "^1.0.0",
    "ai": "^6.0.62",
    "clipboardy": "^5.1.0",
    "commander": "^14.0.2",
    "picocolors": "^1.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@types/bun": "^1.3.8"
  }
}
